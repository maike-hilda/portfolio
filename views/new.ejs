<% include ./partials/header %>

<div class="container">
    <h1 style="text-align: center">Add a new Project</h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/projects" method="POST">
                <div class="form-group">
                    <label class="sr-only" for="">Title</label>
                    <input class="form-control" type="text" placeholder="title" name="project[title]">
                </div>
                <div class="form-group">
                    <label class="sr-only" for="">Image</label>
                    <input class="form-control" type="text" placeholder="image" name="project[image]">
                </div>
                <div class="form-group">
                    <label class="sr-only" for="">Languages</label>
                    <input class="form-control" type="text" placeholder="languages" name="project[languages]">
                </div>
                <div class="form-group">
                    <label class="sr-only" for="">url</label>
                    <input class="form-control" type="text" placeholder="url" name="project[url]">
                </div>
                <div class="form-group">
                    <label class="sr-only" for="">Github</label>
                    <input class="form-control" type="text" placeholder="github" name="project[github]">
                </div>
                <div class="form-group">
                    <label class="sr-only" for="">Description</label>
                    <textarea name="project[description]" id="" cols="30" rows="10">Description goes here...</textarea>    
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary" type="submit">Submit</button>
                </div>
            </form>
        <a href="/projects">Go back</a>
        </div>
        
    </div>
</div>    

<% include ./partials/footer %>