<% include ./partials/header %>

<div class="container">
    <h1 style="text-align: center">Edit <%= project.title %></h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/projects/<%= project._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label class="" for="">Title</label>
                    <input class="form-control" type="text" value="<%= project.title %>" name="project[title]">
                </div>
                <div class="form-group">
                    <label class="" for="">Image</label>
                    <input class="form-control" type="text" value="<%= project.image %>" name="project[image]">
                </div>
                <div class="form-group">
                    <label class="" for="">Languages</label>
                    <input class="form-control" type="text" value="<%= project.languages %>" name="project[languages]">
                </div>
                <div class="form-group">
                    <label class="" for="">url</label>
                    <input class="form-control" type="text" value="<%= project.url %>" name="project[url]">
                </div>
                <div class="form-group">
                    <label class="" for="">Github</label>
                    <input class="form-control" type="text" value="<%= project.github %>" name="project[github]">
                </div>
                <div class="form-group">
                    <label class="" for="">Description</label>
                    <textarea name="project[description]" id="" cols="30" rows="10"><%= project.description %></textarea>    
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary" type="submit">Submit</button>
                </div>
            </form>
        <a href="/projects">Go back</a>
        </div>
        
    </div>
</div>    

<% include ./partials/footer %>